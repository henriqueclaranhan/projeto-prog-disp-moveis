<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinnerSwitchActivity">

    <TextView
        android:id="@+id/textViewColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Selecione uma opção de cor"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerColors"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewColors" />

    <Switch
        android:id="@+id/switchShowSelectedColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:checked="false"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:text="Exibir cor selecionada"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerColors"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageColor"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="88dp"
        android:background="#FF0000"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchShowSelectedColor" />

</androidx.constraintlayout.widget.ConstraintLayout>